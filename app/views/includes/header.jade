
header#header
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/')
            span.brand-blue=appName.substring(0,4)
            span.brand-orange=appName.substring(4)
          .nav-collapse.collapse
            ul.nav.authnav
              if (req.isAuthenticated())
                - var items = [{path:"/",label:"Auth page 1",className:"auth-page-1"},{path:"/",label:"Auth page 2",className:"auth-page-2"},{path:"/",label:"Auth page 3",className:"auth-page-3"},{path:"/" + req.user.username,label:"Me",className:"me"}];
                each item in items
                  if (req.path == item.path) 
                    li.active
                      a(href=item.path, title=item.label, class=item.className) #{item.label}
                  else
                    li
                      a(href=item.path, title=item.label, class=item.className) #{item.label}
              else
                li
                  a(href='/',title="How it Works") How it Works
                li
                  a(href='/',title="Overview") Overview
                li
                  a(href='/',title="Process") Process
                li
                  a(href='/',title="Help Us Launch!") Help Us Launch!
                li
                  a(href='/',title="Benefits") Benefits
                li
                  a(href='/',title="Win $500!") Win $500!
                li
                  a(href='/',title="Contact Us") Contact Us

            ul.nav.pull-right
              if (req.isAuthenticated())
                li
                  a(href="/settings/profile", title="Profile") Settings
                li.divider-vertical
                li
                  a(href="/logout", title="logout") Logout
              else
                li
                  a(href="/login", title="Login") Login
                li
                  a(href="/signup", title="Sign Up") Sign Up